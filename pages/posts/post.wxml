<view>
  <swiper indicator-dots="true" autoplay="true">
     <swiper-item>
		 	<image src="/images/wx.png"></image>
		 </swiper-item>
     <swiper-item>
		 	<image src="/images/vr.png"></image>
		 </swiper-item>
     <swiper-item>
		 	<image src="/images/iqiyi.png"></image>
		 </swiper-item>
  </swiper>
  <block wx:for="{{postkey}}" wx:for-item="its">
    <view class="post-container">
      <view class="post-author-date">
        <image class="post-author" src="{{its.author_img}}"></image>
        <text class="post-date">{{its.date}}</text>
      </view>
      <text class="post-title">{{its.title}}</text>
      <image class="post-image" src="{{its.post_img}}"></image>
      <text class="post-content">{{its.content}}</text>
      <view class="post-like">
        <image class="post-like-image" src="../../images/icon/chat.png"></image>
        <text class="post-like-font">{{its.collect_num}}</text>
        <image class="post-like-image" src="../../images/icon/view.png"></image>
        <text class="post-like-font">{{its.view_num}}</text>
      </view>
    </view>
  </block>
	
</view>
