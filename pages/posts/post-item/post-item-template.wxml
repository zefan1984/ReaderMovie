<template name="postItem">
<view class="post-container">
      <view class="post-author-date">
        <image class="post-author" src="{{its.avatar}}"></image>
        <text class="post-date">{{its.date}}</text>
      </view>
      <text class="post-title">{{its.title}}</text>
      <image class="post-image" src="{{its.imgSrc}}"></image>
      <text class="post-content">{{its.content}}</text>
      <view class="post-like">
        <image class="post-like-image" src="../../images/icon/chat.png"></image>
        <text class="post-like-font">{{its.collection}}</text>
        <image class="post-like-image" src="../../images/icon/view.png"></image>
        <text class="post-like-font">{{its.reading}}</text>
      </view>
    </view>
</template>